// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  avatar    String?
  plan      String   @default("free") // free, pro, team
  createdAt DateTime @default(now())
  lastLogin DateTime @default(now())
  previousLogin DateTime?

  // Relations
  savedCases     SavedCase[]
  recentSearches RecentSearch[]
  starredCases   StarredCase[]
  calendarEvents CalendarEvent[]
  notifications  Notification[]
  usageTracking  UsageTracking[]

  @@map("users")
}

model SavedCase {
  id           String   @id @default(cuid())
  userId       String
  caseNumber   String
  caseTitle    String
  caseType     String
  caseStatus   String
  dateFiled    String
  department   String
  courtLocation String
  judicialOfficer String
  parties      Json // { petitioner: string, respondent: string, etc. }
  notes        String?
  tags         String[] @default([])
  aiSummary    String?
  aiGeneratedAt DateTime?
  savedAt      DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("saved_cases")
}

model RecentSearch {
  id          String   @id @default(cuid())
  userId      String
  query       String
  searchType  String
  resultsCount Int
  searchedAt  DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("recent_searches")
}

model StarredCase {
  id        String   @id @default(cuid())
  userId    String
  caseId    String // References saved case ID
  starredAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("starred_cases")
}

model CalendarEvent {
  id                String   @id @default(cuid())
  userId            String
  title             String
  date              String
  time              String
  type              String // hearing, deadline, meeting, etc.
  caseNumber        String?
  location          String?
  description       String
  duration          Int
  priority          String // low, medium, high, urgent
  status            String // scheduled, completed, cancelled
  virtualMeetingInfo String?
  createdAt         DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("calendar_events")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String // hearing, document, case_update, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  actionUrl String?
  caseNumber String?
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model UsageTracking {
  id              String   @id @default(cuid())
  userId          String
  month           String // YYYY-MM format
  usageCount      Int     @default(0)
  maxUsage        Int     @default(1) // Based on plan
  plan            String  @default("free")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month])
  @@map("usage_tracking")
}